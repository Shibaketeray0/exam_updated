{% set container = theme.settings.fluid_container ? 'container-fluid' : 'container' %}

{%
  set classes = [
  'layout',
  'layout--fourcol-section',
]
%}
{% if content %}
  <div class="header four_col layout--fourcol-section {{ container }}">
    <div class="header_background">
      {% if content.first %}
        <div {{ region_attributes.first.addClass('layout__region', 'layout__region--first', 'header_logo') }}>
          {{ content.first }}
        </div>
      {% endif %}

      {% if content.second %}
        <div {{ region_attributes.second.addClass('layout__region', 'layout__region--second', 'main_nav') }}>
          {{ content.second }}
        </div>
      {% endif %}

      {% if content.third %}
        <div {{ region_attributes.third.addClass('layout__region', 'layout__region--third', 'sidebar') }}>
          {{ content.third }}
        </div>
      {% endif %}
    </div>

    {% if content.fourth %}
      <div {{ region_attributes.fourth.addClass('layout__region', 'layout__region--fourth', 'header_text') }}>
        {{ content.fourth }}
      </div>
    {% endif %}

  </div>
{% endif %}
{{ title_prefix }}
<h3{{ title_attributes }}>
  <a href="{{ url }}">{{ title }}</a>
</h3>
{{ title_suffix }}
{% if snippet %}
  <p{{ content_attributes }}>{{ snippet }}</p>
{% endif %}
{% if info %}
  <p>{{ info }}</p>
{% endif %}
